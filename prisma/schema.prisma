generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Sessions {
  id String @id @db.Uuid
  user_id String @db.Uuid
  expires_at DateTime
  created_at DateTime @default(now())
  last_used DateTime?

  user Users @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([user_id])
  @@index([expires_at])
}

enum Role {
  MEMBER
  ADMIN
  OWNER
}

model Users {
  id String @id @unique @default(uuid()) @db.Uuid
  email String @unique
  first_name String
  last_name String
  password String
  phone_number String?
  pfp Bytes?
  created_at DateTime @default(now())

  session Sessions[]
  memberships Memberships[]
  tasks Tasks[]
}

model Organizations {
  id String @id @unique @default(uuid()) @db.Uuid
  name String
  pfp Bytes?
  created_at DateTime @default(now())

  memberships Memberships[]
  tasks Tasks[]
}

model Memberships {
  id String @id @unique @default(uuid()) @db.Uuid
  user_id String @db.Uuid
  org_id String @db.Uuid
  role Role @default(MEMBER)
  joined_at DateTime @default(now())

  org Organizations @relation(fields: [org_id], references: [id], onDelete: Cascade)
  user Users @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([org_id])
  @@index([user_id])
}

model Tasks {
  id String @id @unique @default(uuid()) @db.Uuid
  user_id String @db.Uuid
  org_id String @db.Uuid
  content String
  deadline DateTime?
  completed_at DateTime?
  created_at DateTime @default(now())

  user Users @relation(fields: [user_id], references: [id], onDelete: Cascade)
  org Organizations @relation(fields: [org_id], references: [id], onDelete: Cascade)

  @@index([user_id])
  @@index([org_id])

}

model Notes {
  id String @id @unique @default(uuid()) @db.Uuid
  user_id String @db.Uuid
  org_id String @db.Uuid
  content String
  remind_at DateTime?
  created_at DateTime @default(now())
}

model Events {
  id String @id @unique @default(uuid()) @db.Uuid
  user_id String @db.Uuid
  org_id String @db.Uuid
  date DateTime
  content String?
  start_time DateTime?
  end_time DateTime?
  created_at DateTime @default(now())
}